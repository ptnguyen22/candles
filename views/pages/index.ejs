<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Babe's Candles</title>
  </head>
  <link rel="stylesheet" href="./css/bootstrap.min.css" />
  <link rel="stylesheet" href="./styles/index.css" />
  <script src="./scripts/index.js"></script>
  <body>
    <%- include("../partials/header"); %>
    <table class="table table-striped table-hover" id="myTable">
      <thead class="thead-dark">
        <tr>
          <th scope="col" class="col-sm-1 text-primary font-weight-bold">
            Date Created
          </th>
          <th scope="col" class="col-sm-1 text-primary font-weight-bold">
            Wax Weight (oz)
          </th>
          <th scope="col" class="col-sm-1 text-primary font-weight-bold">
            FO Percent
          </th>
          <th scope="col" class="text-primary font-weight-bold">Wax Type</th>
          <th scope="col" class="text-primary font-weight-bold">Wax Brand</th>
          <th scope="col" class="text-primary font-weight-bold">FO Name</th>
          <th scope="col" class="text-primary font-weight-bold">Wick Type</th>
          <th scope="col" class="text-primary font-weight-bold">Wick Size</th>
          <th scope="col" class="col-sm-1 text-primary font-weight-bold">
            # Wicks
          </th>
          <th scope="col" class="text-primary font-weight-bold">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% candles.forEach(function(candle) { %>
        <tr onclick="gotocandle(event, '<%= candle.cid.cid %>')">
          <td><%= candle.cid.made.toDateString().substring(3) %></td>
          <td><%= candle.cid.weight %></td>
          <td><%= candle.cid.fo_percent %></td>
          <td>
            <% candle.waxes.forEach(function(wax, index) { %> <%= wax.type %> <%
            if(index!=candle.waxes.length-1) { %>
            <br />
            <% } %> <% }); %>
          </td>
          <td>
            <% candle.waxes.forEach(function(wax, index){ %> <%= wax.brand %> <%
            if(index!=candle.waxes.length-1) { %>
            <br />
            <% } %><% }); %>
          </td>
          <td>
            <% candle.fos.forEach(function(fo, index) { %> <%= fo.name %> <%
            if(index!=candle.fos.length-1) { %>
            <br />
            <% } %> <% }); %>
          </td>
          <td>
            <% candle.wicks.forEach(function(wick, index) { %> <%= wick.type %>
            <% if(index!=candle.wicks.length-1) { %>
            <br />
            <% } %> <% }); %>
          </td>
          <td>
            <% candle.wicks.forEach(function(wick, index){ %> <%= wick.size %>
            <% if(index!=candle.wicks.length-1) { %>
            <br />
            <% } %> <% }); %>
          </td>
          <td>
            <% candle.wicks.forEach(function(wick, index){ %> <%= wick.wicknum
            %> <% if(index!=candle.wicks.length-1) { %>
            <br />
            <% } %> <% }); %>
          </td>
          <td>
            <button
              class="btn"
              onclick="deleteCandle(this)"
              data-cid="<%= candle.cid.cid %>"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-trash3"
                viewBox="0 0 16 16"
              >
                <path
                  d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"
                />
              </svg>
            </button>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
